@model MovieReservationSystem.ViewModels.MovieScheduleVM
@{
    SelectList Moviestems = new SelectList(Model.MovieList, "ID", "Title");
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Add Movie Schedule";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Add New Movie Schedule</h4>
                <a asp-action="Index" class="btn btn-sm btn-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Add" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="MovieId" class="form-label fw-bold">Movie Title</label>
                        <select asp-for="MovieId" asp-items="Moviestems" class="form-select">
                            <option value="">-- Select Movie --</option>
                        </select>
                        <span asp-validation-for="MovieId" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6">
                        <label asp-for="StartTime" class="form-label fw-bold">Start Time</label>
                        <div class="input-group">
                            <input asp-for="StartTime" class="form-control datetimepicker" type="datetime-local" />
                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                        </div>
                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Create Schedule
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Initialize datetime picker if needed
        $(document).ready(function() {
            $('.datetimepicker').datetimepicker({
                format: 'YYYY-MM-DDTHH:mm',
                sideBySide: true
            });
        });
    </script>
}