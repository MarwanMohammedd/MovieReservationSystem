<link href="~/css/Account/login.css" rel="stylesheet" />


    <div class="container min-vh-100 d-flex justify-content-center align-items-center">
        <div class="col-lg-6 col-md-8 col-12 bg-blur text-center">
            <div class="access-denied-icon mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#eb8a9a" viewBox="0 0 16 16">
