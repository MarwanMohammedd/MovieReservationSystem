@model MovieReservationSystem.ViewModels.UserAccountViewModel
@{
    ViewData["Title"] = "User Account";
    Layout=null;
}
<link rel="stylesheet" href="~/css/Account/UserAccount.css">
<div class="user-account-container">
    <div class="account-header">
        <h1><i class="fas fa-user-circle me-2"></i>User Account</h1>
        <hr class="header-divider" />
    </div>

    <div class="account-content">
        <form asp-action="UserAccount" method="post" enctype="multipart/form-data" class="account-form">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-image-container">
                        <div class="image-wrapper">
                            @if (Model.UserImage != null)
                            {
                                @* <img id="profileImage" src="data:image;base64,@Convert.ToBase64String(Model.UserImage)" 
                                     alt="Profile Image" class="img-thumbnail" /> *@
                            }
                            else
                            {
                                <div class="no-image">
                                    <i class="fas fa-user fa-5x"></i>
                                </div>
                            }
                        </div>
                        <div class="image-upload mt-3">
                            <input type="file" asp-for="UserImage" id="imageUpload" class="d-none" accept="image/*" />
                            <label for="imageUpload" class="btn btn-upload">
                                <i class="fas fa-camera me-2"></i>Change Photo
                            </label>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserEmail" class="form-label"></label>
                        <input asp-for="UserEmail" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="UserEmail" class="validation-message"></span>
                    </div>

                    <div class="form-actions mt-4">
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a href="#" class="btn btn-cancel">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('imageUpload').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const imgElement = document.getElementById('profileImage');
                    if (imgElement) {
                        imgElement.src = e.target.result;
                    } else {
                        const noImageDiv = document.querySelector('.no-image');
                        noImageDiv.innerHTML = `<img id="profileImage" src="${e.target.result}" 
                                                    alt="Profile Image" class="img-thumbnail" />`;
                    }
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}