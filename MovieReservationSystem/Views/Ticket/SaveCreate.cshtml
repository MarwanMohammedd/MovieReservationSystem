@{
    ViewData["Title"] = "Booking Confirmation";
}

<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Moviepoint</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/icofont/1.0.2/icofont.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #13151f;
            color: #fff;
            font-family: 'Poppins', sans-serif;
        }

        .confirmation-area {
            padding: 100px 0;
            text-align: center;
        }

        .confirmation-card {
            background: #1a1d28;
            border-radius: 10px;
            padding: 40px;
            max-width: 600px;
            margin: 0 auto;
            border: 1px solid #252a38;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .success-icon {
            color: #4CAF50;
            font-size: 80px;
            margin-bottom: 20px;
        }

        .confirmation-title {
            color: green;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .confirmation-text {
            font-size: 18px;
            margin-bottom: 25px;
        }

        .divider {
            border-color: #252a38;
            margin: 25px 0;
        }

        .theme-btn {
            background: #eb315a;
            border: 1px solid #eb315a;
            color: #fff;
            border-radius: 35px;
            padding: 10px 30px;
            font-size: 16px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-block;
            margin-top: 20px;
        }

            .theme-btn:hover {
                background: transparent;
                color: #eb315a;
            }
    </style>
</head>
<body>

    <!-- Confirmation Section -->
    <section class="confirmation-area">
        <div class="container">
            <div class="confirmation-card">
                <div class="success-icon">
                    <i class="icofont icofont-check-circled"></i>
                </div>
                <h1 class="confirmation-title">Booking Confirmed!</h1>
                <p class="confirmation-text">Your tickets have been successfully created.</p>
                <hr class="divider">
                <p class="text-muted">Thank you for your booking. A confirmation has been sent to your email.</p>
                <div class="d-flex justify-content-center gap-3 mt-4">
                    @* <a asp-action="Index" asp-controller="Ticket" class="theme-btn">
                        <i class="icofont icofont-ticket"></i> View Tickets
                    </a> *@
                    <a asp-action="ShowAll" asp-controller="Movie" class="theme-btn" style="background: transparent; color: #eb315a; border-color: #eb315a;">
                        <i class="icofont icofont-home"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('load', function() {
            document.getElementById('preloader').style.display = 'none';
        });
    </script>
</body>
</html>