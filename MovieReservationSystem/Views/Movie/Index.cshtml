@using MovieReservationSystem.Model.Models
@model IEnumerable<Movie>
@{
    Layout = "_DashboardLayout";
}

<h2>Movies List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Production Year</th>
            <th>Duration (min)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@movie.ImagePath" alt="Movie Image" width="100" height="150" class="img-thumbnail" />
                </td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Director</td>
                <td>@movie.ProductionYear</td>
                <td>@movie.Duration</td>
                <td>
                    <a asp-action="Detials" asp-route-id="@movie.ID" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@movie.ID" class="btn btn-warning">Update</a>
                    <a asp-action="Delete" asp-route-id="@movie.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add New Movie</a>
