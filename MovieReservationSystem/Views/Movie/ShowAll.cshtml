@model IEnumerable<MovieAllVM>

<link rel="stylesheet" type="text/css" href="~/css/Movie/ShowAll.css" media="all" />
<link rel="stylesheet" type="text/css" href="~/css/MoviePagenation.css" media="all" />

<section class="hero-area" id="home">

<section class="hero-section">
            <video class="hero-video" autoplay muted loop playsinline>
                <source src="https://videos.pexels.com/video-files/8262689/8262689-uhd_2732_1440_25fps.mp4" type="video/mp4">
                @* <source src="~/assets/Video/4.mp4" type="video/mp4"> *@
                Your browser does not support the video tag.
            </video>

            <div class="hero-content">
                <h1 class="hero-title">RapidReels</h1>
                <p class="hero-subtitle">Where speed meets the magic of cinema</p>
                <a aps-controller="Movie" asp-action="MoviePagenation" class="btn btn-explore">
                    Explore Movies <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </section>

</section>

<section class="portfolio-area pt-60">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title pb-20">
					<h1><i class="icofont icofont-movie"></i> Spotlight This Month</h1>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col-lg-12">
				<div class="row portfolio-item">
					<!-- Card 1 -->
					@foreach (var movie in Model)
					{
						<div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 ">
							<div class="single-portfolio ">
								<div class="single-portfolio-img">
									<img src="~/Images/@movie.ImagePath" alt="portfolio" />
									<a asp-action="MovieDetailPage" asp-route-id="@movie.ID"></a>
								</div>
								<div class="portfolio-content">
									<a asp-action="MovieDetailPage" asp-route-id="@movie.ID">
										<h4 class="title">@movie.Title</h4>
									</a>
									<div class="review mb-2">
										<div class="author-review">
											@for (int i = 1; i <= 5; i++)
											{
												if (i <= movie.RateAvg)
												{

													<span style="font-size: 24px;">&#9733;</span>

												}
												else
												{


													<span style="font-size: 24px;">&#9734;</span>
												}

											}
										</div>
										<h4>@movie.RateAvg voters</h4>
									</div>
									<a asp-action="MovieDetailPage" asp-route-id="@movie.ID" class="btn btn-explore2">
										Show Details
									</a>
								</div>
							</div>
						</div>
					}

				</div>

				
			</div>
		</div>
	</div>
</section>


<section class="video ptb-90">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title pb-20">
					<h1><i class="icofont icofont-film"></i> Trailers & Videos</h1>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col-md-9">
				<div class="video-area">
					<img src="~/assets/maxresdefault.jpg" alt="Batman" />
					<a href="https://www.youtube.com/watch?v=u1S1W5ED1ng" class="popup-youtube">
						<i class="icofont icofont-ui-play"></i>
					</a>
					<div class="video-text">
						<h2>The Batman 2 (2026)</h2>

					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="row">
					<div class="col-md-12 col-sm-6">
						<div class="video-area">
							<img src="https://www.slashfilm.com/img/gallery/final-interstellar-trailer/intro-import.jpg"
								alt="Interstellar trailer" />
							<a href="https://www.youtube.com/watch?v=2LqzF5WauAw" class="popup-youtube">
								<i class="icofont icofont-ui-play"></i>
							</a>
						</div>
					</div>
					<div class="col-md-12 col-sm-6">
						<div class="video-area">
							<img src="~/assets/sp2.jpg" alt="SpiderMan trailer" />
							<a href="https://www.youtube.com/watch?v=iaD2f2O9wGk" class="popup-youtube">
								<i class="icofont icofont-ui-play"></i>
							</a>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>