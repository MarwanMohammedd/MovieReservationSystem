@model MovieViewModel
@{
    Layout = "_DashboardLayout";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Add New Movie</h3>
                </div>
                <div class="card-body">

                    <form asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" ></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter movie title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genre" class="form-label fw-bold"></label>
                            <input asp-for="Genre" class="form-control" placeholder="Enter movie genre" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter movie description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Director" class="form-label fw-bold"></label>
                            <input asp-for="Director" class="form-control" placeholder="Enter director name" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductionYear" class="form-label fw-bold">Production Year</label>
                            <input asp-for="ProductionYear" type="date" class="form-control" />
                            <span asp-validation-for="ProductionYear" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label fw-bold"></label>
                            <input asp-for="Duration" type="number" class="form-control" placeholder="Enter duration in minutes" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label fw-bold"></label>
                            <input class="form-control" asp-for="ImageFile" type="file" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-plus-circle"></i> Create Movie
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
