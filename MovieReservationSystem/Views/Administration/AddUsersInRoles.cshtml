@model MovieReservationSystem.ViewModels.UserRoleViewModel
@{
    ViewData["Title"] = "Assign Role to User";
    Layout = "_DashboardLayout";
}

<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-user-plus me-2"></i>Assign Role to User</h1>
        <hr class="header-divider" />
    </div>

    <div class="admin-form">
        <form asp-action="AddUsersInRoles" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            
            <div class="form-group">
                <label asp-for="UserEmail" class="form-label"></label>
                <input asp-for="UserEmail" class="form-control" placeholder="Enter user email" />
                <span asp-validation-for="UserEmail" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleName" class="form-label"></label>
                <select asp-for="RoleName" class="form-control" asp-items="new SelectList(Model.AvailableRoles)">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="RoleName" class="validation-message"></span>
            </div>

            <div class="form-actions mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Assign Role
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}