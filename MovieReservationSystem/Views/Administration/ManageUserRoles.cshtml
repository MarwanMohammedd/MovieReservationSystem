@model UserRoleViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Manage User Roles</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    
                    <label class="form-label">User Email</label>
                    <input type="email" asp-for="UserEmail" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Select Role</label>
                    <select asp-for="RoleName" class="form-select" required>
                        <option value="">-- Select Role --</option>
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" asp-page-handler="Add" class="btn btn-success">
                        <i class="bi bi-person-plus"></i> Add to Role
                    </button>
                    <button type="submit" asp-page-handler="Remove" class="btn btn-danger">
                        <i class="bi bi-person-dash"></i> Remove from Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
